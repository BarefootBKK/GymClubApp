<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="400dp"
                        android:layout_height="210dp"
                        android:background="@drawable/mainpage"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="400dp"
                        android:layout_height="210dp"
                        android:background="@drawable/logo"
                        android:gravity="bottom" />
                </LinearLayout>
            </HorizontalScrollView>


            <!-- 记得！修改字体和颜色！-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:text="Booking Coach"
                android:textColor="#000000"
                android:textSize="26sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:text="Strength training"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- 1st Row-->

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/yaling"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Dumbbell"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bicycle"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Bicycle"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bojicao"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Kickboxing"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <!-- End 1st Row-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:text="Flexibility training"
                android:textColor="#000000"
                android:textSize="20sp" />
            <!-- 2nd Row-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/yoga_detail"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Yoga"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ball"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Fitness ball"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/dancing"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Dancing"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>
            <!-- End 2nd Row-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:text="Ball game"
                android:textColor="#000000"
                android:textSize="20sp" />
            <!-- 3rd Row-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/badminton"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Badminton"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/tennis"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Tennis"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/tabletennis"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="80dp"
                            android:padding="8dp"
                            android:text="Tabletennis"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>